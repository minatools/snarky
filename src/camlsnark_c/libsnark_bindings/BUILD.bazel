    ],
)

ocaml_module(
    name = "libsnark.cm_",
    impl = "libsnark.ml",
    ns_module = ":snarky_libsnark_bindings_ns_module",
    opts = IMPL_OPTS,
    ppx_bin = PPX4_9C0A2F04,
    ppx_bin_opts = [
        # do not sort (buildifier)
        "-cookie",
        "library-name=\"snarky_libsnark_bindings\"",
        "-corrected-suffix",
        ".ppx-corrected",
